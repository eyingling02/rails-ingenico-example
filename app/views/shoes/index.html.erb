<div id='all-shoes'>
  <h1 class='page-title'>Shoe Shop</h1>
  <h2 class='large-text'> Select a Shoe! </h2>
  <% if @shoes %>
    <% @shoes.each do |shoe| %>
    <div class='each-shoe'>
      <div class="col-sm-3">
        <%= image_tag "#{@image.sample}" %>
      </div>
      <div id="shoe-div" class="col-sm-9">
        <h3 class='medium-text'><%= shoe.name %></h3>
        <p class='small-text'>$<%= shoe.price %></p>
        <%= link_to "Buy this Shoe!", "/shoes/#{shoe.id}", :class => "btn btn-primary", :id => "shoe-button" %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
